{
    "id": "dotnet",
    "version": "1.0.0",
    "name": ".NET SDK and Runtime",
    "description": "Installs .NET SDK, runtime, and development tools from official Arch Linux packages",
    "installsAfter": [
        "ghcr.io/bartventer/arch-devcontainer-features/common-utils"
    ],
    "options": {
        "dotnetVersion": {
            "type": "string",
            "default": "latest",
            "description": ".NET version to install (latest, 8.0, 7.0, 6.0)"
        },
        "installAspNetRuntime": {
            "type": "boolean",
            "default": true,
            "description": "Install ASP.NET Core Runtime"
        },
        "installEntityFramework": {
            "type": "boolean",
            "default": false,
            "description": "Install Entity Framework Core CLI (dotnet-ef)"
        },
        "installAspNetCodeGenerator": {
            "type": "boolean",
            "default": false,
            "description": "Install ASP.NET Core Code Generator"
        },
        "installDevCerts": {
            "type": "boolean",
            "default": false,
            "description": "Install development certificates tool"
        },
        "installGlobalTools": {
            "type": "string",
            "default": "",
            "description": "Comma-separated list of additional global tools to install"
        }
    }
}